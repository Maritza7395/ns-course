{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom",
      "es6"
    ],
    "baseUrl": "./",
      "paths": {
          "~/*": [
              "src/*"
          ],
          "*": [
              "./node_modules/tns-core-modules/*",
              "./node_modules/*"
          ]
      }
  },
  "files": [
    "./app/main.ts"
  ],
  "includes": [
    "references.d.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
